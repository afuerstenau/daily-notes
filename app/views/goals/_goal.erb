<% if goal.changed_today? %>
	<li class="updated">
<% else %>
	<li>	
<% end %>
<% if goal.link.blank? %>
<%= goal.summary %><%= '('+goal.info+')' unless goal.info.blank? %>
<% else %>
<%= link_to goal.summary, goal.link %> <%= '('+goal.info+')' unless goal.info.blank? %>
<% end %>

<% if not goal.eta.empty? %>
(ETA: <%= goal.eta%>)
<% end %>

<% if not goal.due_date.empty? %>
(Due: <%= goal.due_date%>)
<% end %>

<span id="goal_buttons"><%= link_to 'Edit', edit_goal_path(goal)%> <%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></span>
</li>
<ul>
<%= render goal.notes %>
</ul>