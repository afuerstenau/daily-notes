    <%= f.label :teammember_id %>
    <%= f.select :teammember_id, Teammember::order(name: :asc).map { |teammember| [teammember.name, teammember.id] } %>
  </div>
  
  <div class="field">
    <%= f.label :goal_id %>
    <%= f.select :goal_id, Goal::order(priority: :asc).map { |goal| [goal.prio_and_summary, goal.id] }, {include_blank: 'None'} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
